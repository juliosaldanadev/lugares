<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetalleActivity">

    <TextView
        android:id="@+id/titulo_lugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/monserrate_title"
        android:textSize="@dimen/titulo_size"

        />
    <ImageView
        android:id="@+id/image_lugar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:src="@drawable/monserrate"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/descripcion_lugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/monserrate_description"
        />
</LinearLayout>